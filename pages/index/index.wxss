/**index.wxss**/
page{
  width: 100%;
  height: 100%;
  background: url("http://127.0.0.1:7001/public/bg.png") 0 0 no-repeat;
  background-size: 100% 100%;
}
.btn{
  width: 520rpx;
  height: 240rpx;
}
.btn1{
  background: url("http://127.0.0.1:7001/public/order.png") 0 0 no-repeat;
}
.btn2{
  margin-top: 50rpx;
  background: url("http://127.0.0.1:7001/public/check.png") 0 0 no-repeat;
}
.imgPublic{
  box-shadow: 0 0 50rpx #ededed;
  background-size: 100% 100%;
}
.wrap{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
}
.wrap button{
  width: 700rpx;
  background: #f33;
  color: white;
  border-radius: 20rpx;
}


